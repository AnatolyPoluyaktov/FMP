[Unit]
Description=FMP Mini App Backend Service
After=network.target

[Service]
Type=simple
User={{ app_user }}
Group={{ app_group }}
WorkingDirectory={{ app_dir }}/backend
ExecStart={{ app_dir }}/backend/{{ app_name }}-backend
Restart=always
RestartSec=5
Environment=GIN_MODE=release

# Security
NoNewPrivileges=true
PrivateTmp=true
ProtectSystem=strict
ProtectHome=true
ReadWritePaths={{ app_dir }}

[Install]
WantedBy=multi-user.target
